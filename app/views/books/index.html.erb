<p id="notice"><%= notice %></p>

<h1 class="text-center">Mis Libros</h1>

<div class= "row">
    <div class= "col-md-3 offset-md-2">
      <%= search_form_for @q do |f| %>
        <div class="form-group">
          <%= f.label :status_eq, "Status" %>
          <%= f.select :status_eq, options_for_select(Book.statuses, @q.status_eq), {}, {class: "form-control"}%>
        </div>
        <%= f.submit "Search", class: "btn btn-primary" %> 
      <% end %>
    </div>
</div>

<br>

<table class ='table'>
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col"><%= sort_link(@q, :title) %></th>
      <th scope="col">Author</th>
      <th scope="col">Status</th>
      <th scope="col">Borrowed at</th>
      <th scope="col">Returned at</th>
      <th colspan="3">Botones</th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.id %></td>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.status %></td>
        <td><%= book.borrowed_at %></td>
        <td><%= book.returned_at %></td>
        <td><%= link_to 'Show', book, class: 'btn btn-success' %></td>
        <td><%= link_to 'Edit', edit_book_path(book), class: 'btn btn-warning' %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book', new_book_path, class: 'btn btn-primary' %>
